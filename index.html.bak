		<!--Oferta Slideshow SCRIPT-->
		<script>
			var i = 0; 			// Start Point
			var images = [];	// Images Array
			var time = 5000;	// Time Between Switch
	 
			// Image List
				images[0] = 'images/oferta/oferta1.jpg';
				images[1] = "images/oferta/oferta2.jpg";
				images[2] = "images/oferta/oferta3.jpg";
				images[3] = "images/oferta/oferta4.jpg";
				images[4] = "images/oferta/oferta5.jpg";

			// Change Image
			function changeImg(){
				document.slide.src = images[i];

			// Check If Index Is Under Max	
				if(i < images.length - 1){
			// Add 1 to Index
					i++; 
				} 
			else { 
				// Reset Back To O
					i = 0;
				}

			// Run function every x seconds
				setTimeout("changeImg()", time);
			}

			// Run function when page loads
			window.onload=changeImg;
		</script>
		
